@model List< ImdbViewModel>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <h1>IMDB Movies</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Title</th>
                <th>Year</th>
                <th>Rating</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.rank</td>
                    <td>@item.title</td>
                    <td>@item.year</td>
                    <td>@item.rating</td>
                    <td><a href="@item.trailer" class="btn btn-dark">Fragmanı Oynat</a></td>
                    <td><img src="@item.image" alt="@item.title" width="100" height="150" /></td>
                </tr>
            }
        </tbody>
    </table>
    </div>